<%= form_with(model: [blog, comment]) do |f| %>
    <% if comment.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(comment.errors.count, "error") %> found</h2>
            <ul>
                <% comment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.text_area :content, id: "comment_content_#{blog.id}" %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>