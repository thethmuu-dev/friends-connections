<ul>
    <% comments.each do |comment| %>
        <% if comment.id.present? %>
            <li>
                <div class="comment-content" id="this_comment_<%= comment.id %>"></div>

                <p><%= comment.content %></p>

                <p><%= link_to "Edit", edit_blog_comment_path(blog, comment), remote: true %></p>

                <p><%= link_to "Delete", blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Are you sure to delete this??"} %></p>
            </li>
        <% end %>
    <% end %>
</ul>